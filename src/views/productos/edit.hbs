<h1 class="mb-4">Editar producto</h1>

<div class="row">
	<div class="col-md-4 offset-md-4">
		<div class="card">
			<div class="card-body">
				<form action="/productos/edit/{{producto.dataValues.id}}" method="post" enctype="multipart/form-data">
					<div class="input-group mb-3">
						<input type="text" name="nombre" value="{{producto.dataValues.nombre}}" placeholder="Nombre" class="form-control" autofocus required>
					</div>
					<div class="input-group mb-3">
						<input type="text" name="marca" value="{{producto.dataValues.marca}}" placeholder="Marca" class="form-control" required>
					</div>
					<div class="input-group mb-3">
						<input type="number" name="precio_venta" value="{{producto.dataValues.precio_venta}}" placeholder="Precio venta" class="form-control" required>
					</div>
					<div class="input-group mb-3">
						<input type="number" name="precio_compra" value="{{producto.dataValues.precio_compra}}" placeholder="Precio compra" class="form-control" required>
					</div>
					<div class="input-group mb-3">
						<input type="text" name="pais_procedencia" value="{{producto.dataValues.pais_procedencia}}" placeholder="PaÃ­s procedencia" class="form-control" required>
					</div>
					<div class="input-group mb-3">
						<input type="file" name="imagen" accept="image/*" class="form-control" />
					</div>

					<button type="submit" class="btn btn-success col-12">
						<i class="bi bi-arrow-clockwise"></i> Actualizar
					</button>
				</form>
			</div>
		</div>
	</div>
</div>