<div class="row col-3 mx-auto mb-4">
	<a href="/productos/create" class="btn btn-success">
		Registrar producto
	</a>
</div>

<div class="row">
	{{#each productos}}
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Nombre</th>
						<th scope="col">Marca</th>
						<th scope="col">P. venta</th>
						<th scope="col">P. compra</th>
						<th scope="col">Procedencia</th>
						<th scope="col">Acciones</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{nombre}}</td>
						<td>{{marca}}</td>
						<td>S/. {{precio_venta}}</td>
						<td>S/. {{precio_compra}}</td>
						<td>{{pais_procedencia}}</td>
						<td>
							<a href="/productos/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
							<a href="/productos/edit/{{_id}}" class="btn btn-secondary">Editar</a>
						</td>
					</tr>
				</tbody>
			</table>
	{{/each}}
</div>



