<h1 class="mb-4">Buscar productos</h1>

<div class="row mb-4">
    <div class="col text-center">
		<form action="/productos/search" method="post" class="input-group">
        	<input class="form-control" type="text" placeholder="Buscar por nombre" name="frmBuscar">
        	<button class="btn btn-primary" type="submit"><i class="bi bi-search"></i> Buscar</button>
      	</form>
    </div>
</div>

<div class="row">
	<table class="table table-striped table-hover table-bordered text-center align-middle">
		<thead>
			<tr>
				<th scope="col">Imagen</th>
				<th scope="col">Nombre</th>
				<th scope="col">Marca</th>
				<th scope="col">P. venta</th>
				<th scope="col">P. compra</th>
				<th scope="col">Procedencia</th>
				<th scope="col">Acciones</th>
			</tr>
		</thead>
		<tbody>
			{{#each prods}}
				<tr>
					<td><img src="{{url_imagen}}" class="img-thumbnail img-fluid" width="100"></td>
					<td>{{nombre}}</td>
					<td>{{marca}}</td>
					<td>S/. {{precio_venta}}</td>
					<td>S/. {{precio_compra}}</td>
					<td>{{pais_procedencia}}</td>
					<td>
						<a href="/productos/delete/{{_id}}" class="btn btn-danger"><i class="bi bi-trash"></i></a>
						<a href="/productos/edit/{{_id}}" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>



