    "@types/express-handlebars": "^5.3.1",
    "@types/node": "^16.10.3",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-handlebars": "^5.3.4",
    "mongoose": "^6.0.9",
    "ncp": "^2.0.0",
    "rimraf": "^3.0.2"
  }
}
